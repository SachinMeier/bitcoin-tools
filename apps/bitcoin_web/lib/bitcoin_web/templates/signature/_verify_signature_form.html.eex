<%= form_for @conn, @action, fn f -> %>

	<%= label f, :signature %>
	<%= text_input f, :signature, required: true %>
	<%= error_tag f, :signature %>

	<%= label f, :message %>
	<%= text_input f, :message, required: true %>

	<%= label f, :public_key %>
	<%= text_input f, :public_key, required: true %>


	<div>
		<%= submit "sign" %>
	</div>
<% end %>