<%= form_for @conn, @action, fn f -> %>

	<%= label f, :signature %>
	<%= text_input f, :signature %>
	<%= error_tag f, :signature %>

	<%= label f, :message %>
	<%= text_input f, :message %>

	<%= label f, :public_key %>
	<%= text_input f, :public_key %>


	<div>
		<%= submit "sign" %>
	</div>
<% end %>