<%= form_for @conn, @action, fn f -> %>

	<%= label f, :data %>
	<%= text_input f, :data %>
	<%= error_tag f, :data %>

	<%= label f, :"encode / decode" %>
	<label class="switch">
	  <%= checkbox f, :encode %>
	  <span class="slider round"></span>
	</label>

	<div>
		<%= submit "encode / decode" %>
	</div>
<% end %>